<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/default_bg"
    android:orientation="vertical"
    tools:ignore="PxUsage">

    <ImageView
        android:id="@+id/bg_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        />

    <widget.small.com.smallwidget.helper.widget.adapterview.EmptyRecyclerView
        android:id="@+id/rv_main_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <View
        android:id="@+id/main_back_to_top"
        android:layout_width="100px"
        android:layout_height="100px"
        android:visibility="gone"
        android:layout_gravity="end|center_vertical"
        android:layout_margin="@dimen/px50"
        android:background="@drawable/ic_back_top_blue"/>
</FrameLayout>