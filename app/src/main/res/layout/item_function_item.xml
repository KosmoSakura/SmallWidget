<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/item_main_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/T_all"
    android:padding="@dimen/px30"
    tools:ignore="PxUsage">

    <ImageView
        android:id="@+id/item_main_logo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/rect_blue_round_all_cirlce"
        android:padding="@dimen/px50"
        android:src="@drawable/ic_face_g"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/item_main_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px10"
        android:layout_marginTop="@dimen/px10"
        android:gravity="center"
        android:text="人脸识别"
        android:textSize="@dimen/px40"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/item_main_logo"
        app:layout_constraintRight_toRightOf="@id/item_main_logo"
        app:layout_constraintTop_toBottomOf="@id/item_main_logo"/>
</android.support.constraint.ConstraintLayout>