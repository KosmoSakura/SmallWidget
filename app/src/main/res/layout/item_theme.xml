<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/item_theme_ll"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/px30"
    android:paddingLeft="@dimen/px36"
    android:paddingRight="@dimen/px36"
    android:paddingTop="@dimen/px30">

    <ImageView
        android:id="@+id/item_theme_color"
        android:layout_width="@dimen/px300"
        android:layout_height="@dimen/px90"
        android:layout_centerVertical="true"
        android:background="@drawable/rect_red_round_rim"
        android:padding="@dimen/px9"
        android:src="@color/green"
        />


    <TextView
        android:id="@+id/item_theme_txt"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/px30"
        android:gravity="center_vertical"
        android:text="cmask"
        android:textSize="@dimen/px42"
      />

    <CheckedTextView
        android:id="@+id/item_theme_ctv"
        android:layout_width="@dimen/px60"
        android:layout_height="@dimen/px60"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/selector_rim"
        android:checked="false"/>

</RelativeLayout>