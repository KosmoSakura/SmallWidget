<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/default_black"
              android:orientation="vertical">
    <!--首页-->
    <RelativeLayout
        android:id="@+id/nav_camera"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px120"
        android:background="@drawable/rect_side_nav_bar"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nav_camera_i"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="首\t\t页"
            android:textColor="@color/white"/>

        <ImageView
            android:layout_width="@dimen/px75"
            android:layout_height="@dimen/px75"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/px60"
            android:layout_toLeftOf="@id/nav_camera_i"
            android:scaleType="fitXY"
            android:src="@drawable/ic_menu_theme"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/default_blue"/>
    </RelativeLayout>
    <!--支付宝-->
    <RelativeLayout
        android:id="@+id/nav_gallery"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px120"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nav_gallery_i"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="支付宝"
            android:textColor="@color/white"/>

        <ImageView
            android:layout_width="@dimen/px75"
            android:layout_height="@dimen/px75"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/px60"
            android:layout_toLeftOf="@id/nav_gallery_i"
            android:scaleType="fitXY"
            android:src="@drawable/ic_menu_theme"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/default_blue"/>
    </RelativeLayout>
    <!--视频-->
    <RelativeLayout
        android:id="@+id/nav_slideshow"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px120"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nav_slideshow_i"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="体\t\t重"
            android:textColor="@color/white"/>

        <ImageView

            android:layout_width="@dimen/px75"
            android:layout_height="@dimen/px75"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/px60"
            android:layout_toLeftOf="@id/nav_slideshow_i"
            android:scaleType="fitXY"
            android:src="@drawable/ic_menu_theme"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/default_blue"/>
    </RelativeLayout>

    <!--分享-->
    <RelativeLayout
        android:id="@+id/nav_share"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px120"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/nav_share_i"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="二维码"
            android:textColor="@color/white"/>

        <ImageView
            android:layout_width="@dimen/px75"
            android:layout_height="@dimen/px75"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/px60"
            android:layout_toLeftOf="@id/nav_share_i"
            android:scaleType="fitXY"
            android:src="@drawable/ic_menu_theme"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/default_blue"/>
    </RelativeLayout>
    <!--sedn-->
    <RelativeLayout
        android:id="@+id/nav_send"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px120"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/nav_send_i"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="没想好"
            android:textColor="@color/white"/>

        <ImageView
            android:layout_width="@dimen/px75"
            android:layout_height="@dimen/px75"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/px60"
            android:layout_toLeftOf="@id/nav_send_i"
            android:scaleType="fitXY"
            android:src="@drawable/ic_menu_theme"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/default_blue"/>
    </RelativeLayout>
    <!--设置-->
    <RelativeLayout
        android:id="@+id/nav_manage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px120"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/nav_manage_i"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="设\t\t置"
            android:textColor="@color/white"/>

        <ImageView
            android:layout_width="@dimen/px75"
            android:layout_height="@dimen/px75"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/px60"
            android:layout_toLeftOf="@id/nav_manage_i"
            android:scaleType="fitXY"
            android:src="@drawable/ic_menu_theme"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/default_blue"/>
    </RelativeLayout>
</LinearLayout>