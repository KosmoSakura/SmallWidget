<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/item_theme_ll"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/px30"
    android:paddingLeft="@dimen/px36"
    android:paddingRight="@dimen/px36"
    android:paddingTop="@dimen/px30">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rect_blue_round_all_cirlce"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px75"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_theme_month"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:padding="@dimen/px6"
                android:text="265才打算"
                android:textColor="@color/red_dark"
                android:textSize="@dimen/px36"
                android:typeface="monospace"
                />

            <View
                android:id="@+id/item_theme_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px2"
                android:background="@color/default_divider"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/item_theme_day"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/px6"
                android:paddingLeft="@dimen/px60"
                android:paddingTop="@dimen/px6"
                android:text="265才打算"
                android:textColor="@color/default_blue"
                android:textSize="@dimen/px36"
                android:typeface="monospace"
                android:visibility="gone"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px2"
            android:background="@color/default_divider"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/item_theme_icon"
                android:layout_width="@dimen/px150"
                android:layout_height="@dimen/px150"
                android:layout_marginRight="@dimen/px30"
                android:layout_marginTop="@dimen/px6"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/item_theme_lay_1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px75"
                android:layout_toRightOf="@id/item_theme_icon"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/item_theme_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/dp10"
                    android:gravity="center_vertical"
                    android:text="265才打算"
                    android:textSize="@dimen/px42"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/item_theme_lay_2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px75"
                android:layout_below="@id/item_theme_lay_1"
                android:layout_toRightOf="@id/item_theme_icon"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_theme_wei"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/px30"
                    android:gravity="center_vertical"
                    android:text="150"
                    android:textColor="@color/default_red"
                    android:textSize="@dimen/px42"
                    />

                <TextView
                    android:id="@+id/item_theme_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/px30"
                    android:gravity="center_vertical"
                    android:text="斤"
                    android:textSize="@dimen/px42"
                    />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>